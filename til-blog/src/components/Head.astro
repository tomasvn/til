---
interface Props {
	title: string;
	stylesUrl?: string;
}

const { title, stylesUrl } = Astro.props;
---

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width">
<title>{title}</title>
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="stylesheet" href={Astro.resolve(stylesUrl)}>